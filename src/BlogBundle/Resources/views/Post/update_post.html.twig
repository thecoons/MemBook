{% extends "::base.html.twig" %}

{% block title %}Update your meme !{% endblock %}

{% block body %}
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col s12 m6 offset-m3">
	<div class="card" id="login-card">
          <div class="card-content">
	    <h3 class="card-title black-text center-align" id="card-title">Update your meme right here.</h3>
	    {{ form_start(form) }}
	    <div class="input-field">
	      {{ form_widget(form.titre,{'attr':{'class':'validate'}})}}
	      <label>Titre</label>
	    </div>
	    <div class="input-field">
	      {{ form_widget(form.url,{'attr':{'class':'validate'}})}}
	      <label>Url</label>
	    </div>
	    <div class="input-field">
	      {{ form_widget(form.description,{'attr':{'class':'materialize-textarea'}})}}
	      <label>Description</label>
	    </div>

	    <div class="card-action">
	      {{ form_widget(form.save, {'attr':{'class':'waves-effect waves-light btn'},'label':'Update'}) }}
	    </div>
	    {{ form_end(form) }}
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>
  {% endblock %}
