{% extends "::base.html.twig" %}

{% block title %}BlogBundle:Post:createPost{% endblock %}

{% block body %}
<br><br><br>

<div class="container">
  <div class="section">
    {% block content %}

    <h1 class="header">Edit your Meme</h1>
    {% endblock %}
  </div>
</div>
<br><br><br>
<div class="container">
  <div class="section">
    {{ form_start(form) }}
    <div class="input-field">
      {{ form_widget(form.titre,{'attr':{'id':'titre','class':'validate'}})}}
      <label for="titre">Titre</label>
    </div>
    <div class="input-field">
      {{ form_widget(form.url,{'attr':{'id':'url_pic','class':'validate'}})}}
      <label for="url_pic">Url</label>
    </div>
    <div class="input-field">
    {{ form_widget(form.description,{'attr':{'class':'materialize-textarea','id':'description'}})}}
    <label for="description">Description</label>
  </div>
    {{ form_widget(form.save, {'attr':{'class':'waves-effect waves-light btn'},'label':'Update Meme'}) }}
    {{ form_end(form) }}
  </div>
</div>
<br><br><br>

{% endblock %}
