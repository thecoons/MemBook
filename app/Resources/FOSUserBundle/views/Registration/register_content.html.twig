{% trans_default_domain 'FOSUserBundle' %}
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col s12 m6 offset-m3">
	<div class="card" id="login-card">
          <div class="card-content">
	    <h3 class="card-title black-text center-align" id="card-title">Sign in</h3>
	    
	    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
	    
            <div class="input-field">
              {{ form_widget(form.username,{'attr':{'placeholder':'Enter a username ...' ,'class':'validate'}})}}
              <label>Username</label>
            </div>
            <div class="input-field">
              {{ form_widget(form.email,{'attr':{'placeholder':'Enter a valid mail address ...','class':'validate'}})}}
              <label>Mail</label>
            </div>
            <div class="input-field">
              {{ form_widget(form.plainPassword.first,{'attr':{'placeholder':'Enter a solid password ...','class':'validate'}})}}
              <label>Password</label>
            </div>
            <div class="input-field">
              {{ form_widget(form.plainPassword.second,{'attr':{'placeholder':'And here too ...','class':'validate'}})}}
              <label>Confirmation</label>
            </div>
            {{ form_widget(form) }}
            <div class="card-action">
              <input type="submit" class="btn" value="Sign in" />
            </div>
	    {{ form_end(form) }}
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>
